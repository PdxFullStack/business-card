{
	"name": "business-card",
	"version": "0.0.1",
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/kit": "^2.6.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.6",
		"@types/bun": "^1.1.10",
		"@types/eslint": "^9.6.0",
		"bun-types": "^1.1.29",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.44.0",
		"globals": "^15.0.0",
		"husky": "^9.1.6",
		"less": "^4.2.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^5.0.0-next.200",
		"svelte-check": "^4.0.0",
		"svelte-preprocess": "^6.0.2",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.7.0",
		"vite": "^5.0.3",
		"vitest": "^2.0.0"
	},
	"private": true,
	"scripts": {
		"build": "vite build",
		"commit-check": "bun run test && bun run lint-check && bun run typecheck",
		"commit-fix": "bun run lint",
		"dev": "vite dev",
		"serve": "bun run server.ts",
		"lint": "prettier --write .",
		"lint-check": "prettier --check .",
		"pre-commit": "bun run commit-check",
		"preview": "vite preview",
		"test": "bun run test:integration && bun run test:unit-auto",
		"test:integration": "playwright test",
		"test:unit-auto": "vitest --run",
		"test:unit-manual": "vitest",
		"typecheck": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"typecheck:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"type": "module",
	"dependencies": {
		"@dotenvx/dotenvx": "^1.14.1",
		"@sveltejs/adapter-node": "^5.2.5"
	}
}
